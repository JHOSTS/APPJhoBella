@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/c411e7e344.js" crossorigin="anonymous"></script>

</head>

<body>
    <div class="container">
        <h2>Login</h2>
        <form method="post">
            <div class="form-group">
                <label for="usuario">Usuário:</label>
                <input type="text" id="usuario" name="usuario" placeholder="Insira o login">
            </div>
            <div class="form-group">
                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" placeholder="Insira a senha" />
            </div>
            <div class="form-group">
                <input type="submit" asp-action="Login" value="Entrar">
            </div>
            <div class="form-group">
                <button type="submit" id="btnRegistrar" asp-controller="Registro" asp-action="Registro"> Registrar </button>
            </div>
        </form>
    </div>
</body>
</html>


